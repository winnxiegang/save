<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recent_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="vertical"
  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.banana.commlib.liveScore.view.GsLiveMatchTextView
            android:id="@+id/gsLiveMatchLeftTV"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/icon_gslive_arrow"
            android:gravity="top|center_horizontal"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:item_padding="11dp"
            tools:text="近5场" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_live_vs" />


        <com.android.banana.commlib.liveScore.view.GsLiveMatchTextView
            android:id="@+id/gsLiveMatchRightTv"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/icon_gslive_arrow"
            android:gravity="top|center_horizontal"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:item_padding="11dp"
            tools:text="近5场" />
    </LinearLayout>

    <TextView
        android:id="@+id/gsLiveMatchTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:text="03-21 15.21开赛"
        android:textColor="@color/white"
        android:textSize="12sp" />
</LinearLayout>