    </LinearLayout>

    <ImageView
        android:id="@+id/cancel"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_update_close"/>
