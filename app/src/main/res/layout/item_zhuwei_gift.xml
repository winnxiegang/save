<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layoutGift"
        android:layout_height="45dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp1"
        android:background="#f8f8f8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGift"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/cold_coin_wai" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="x555"
            android:textColor="#daa705"
            android:textSize="12sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvValue1"
        android:layout_height="45dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp1"
        android:background="#f8f8f8"
        android:gravity="center"
        android:text="400"
        android:textColor="@color/main_black_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvValue2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginRight="@dimen/dp1"
        android:layout_weight="1"
        android:background="#f8f8f8"
        android:gravity="center"
        android:text=""
        android:textColor="@color/main_black_text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvValue3"
        android:layout_height="45dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp1"
        android:background="#f8f8f8"
        android:gravity="center"
        android:text=""
        android:textColor="@color/main_black_text_color"
        android:textSize="15sp" />
</LinearLayout>