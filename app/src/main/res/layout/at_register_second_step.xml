<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/psdIv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/selector_edit_password" />

            <com.android.xjq.view.expandtv.ValidateEditText
                android:id="@+id/passwordEt"
                style="@style/login_edit_text_style"
                android:hint="请设置密码,  6-20位,  区分大小写"
                android:inputType="textPassword"
                android:maxLength="20" />

            <CheckBox
                android:id="@+id/passwordShownCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@drawable/selector_eyes_cb" />

        </LinearLayout>

        <View
            style="@style/cutLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/confirmPsdIv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/selector_edit_confirm_password" />

            <com.android.xjq.view.expandtv.ValidateEditText
                android:id="@+id/confirmPasswordEt"
                style="@style/login_edit_text_style"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:maxLength="20" />

            <CheckBox
                android:id="@+id/confirmPasswordShownCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:button="@drawable/selector_eyes_cb" />

        </LinearLayout>

        <View
            style="@style/cutLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nickNameIv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/selector_edit_nickname" />

            <com.android.xjq.view.expandtv.ValidateEditText
                android:id="@+id/nickNameEt"
                style="@style/login_edit_text_style"
                android:hint="请输入昵称"
                android:maxLength="12" />

        </LinearLayout>

        <View
            style="@style/cutLine"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_agree_checked" />

        <TextView
            android:id="@+id/userAgreeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="我以阅读并同意《用户注册协议》" />

    </LinearLayout>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/selector_red_btn"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>