<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/comment_popup_base_width"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp5"
    android:gravity="right"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp35"
        android:background="#585b61"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/zhiDingLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/zhiDingTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="置顶"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#67696d" />

        </LinearLayout>

        <TextView
            android:id="@+id/replyTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="回复"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#67696d" />

        <TextView
            android:id="@+id/juBaoTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="举报"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_trig2" />
    </LinearLayout>

</LinearLayout>