<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_package"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/package_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:src="@drawable/ic_package_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/bg_package_money"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/package_gold_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:drawableLeft="@drawable/ic_package_gold"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/package_banna_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_package_banna"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/package_dollar_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_package_dollar"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <RadioGroup
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5"
        android:background="@color/alpha_blue_gray"
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_package_btn"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="宝箱"
            android:textColor="@color/color_selector_package" />

        <RadioButton
            android:id="@+id/btn_prop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_package_btn"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="道具"
            android:textColor="@color/color_selector_package" />
    </RadioGroup>


    <FrameLayout
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        android:id="@+id/container"
        android:background="@color/alpha_blue_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>