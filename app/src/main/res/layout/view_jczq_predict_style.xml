<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecastGreenLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/reAnalysisGreenLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/analysisIv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/analyse_forecast_green" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3.4dp">

            <TextView
                android:id="@+id/forecastGreenTv"
                android:layout_width="wrap_content"
                android:layout_height="16.6dp"
                android:background="@drawable/shape_green_analysis"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="zhusheng"
                android:textColor="@color/white"
                android:textSize="12sp" />


            <View
                android:id="@+id/lineView"
                android:layout_width="0.5dp"
                android:layout_height="16.6dp"
                android:background="@color/dialog_text_color"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/analysisCloseIv"
                android:layout_width="wrap_content"
                android:layout_height="16.6dp"
                android:background="@drawable/shape_green_radius_analysis"
                android:paddingLeft="5dp"
                android:paddingRight="7dp"
                android:src="@drawable/analysis_close"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

