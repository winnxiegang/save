<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gradient_blue2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_gradient_blue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="打开"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/package_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_close_x" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/package_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:padding="@dimen/dp5"
            android:src="@drawable/image_empty" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/package_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/package_logo"
                android:text="白金宝箱"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

            <TextView
                android:id="@+id/package_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/package_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dp10"
                android:layout_toRightOf="@+id/package_logo"
                android:text="已拥有"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="#295784">

        <Button
            android:id="@+id/package_btn_delete"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:text="＿"
            android:paddingBottom="11dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/package_calculate_tv"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp16" />


        <Button
            android:id="@+id/package_btn_add"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:text="＋"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/package_btn_ok"
        android:layout_width="120dp"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginTop="@dimen/dp40"
        android:background="@drawable/selector_orange"
        android:text="确定"
        android:textSize="15sp"
        android:textColor="@color/white" />
</LinearLayout>