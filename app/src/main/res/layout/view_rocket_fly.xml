<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/flyLayout"
        android:layout_marginBottom="-500dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/rocketAndFireLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/flyFireIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="310dp"
                    android:src="@drawable/rocket_fire_fly_01"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/successFireIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="200dp"
                    android:src="@drawable/rocket_fire_burst01"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/failedFogIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="190dp"
                    android:src="@drawable/black_fire01"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/rocketIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="350dp"
                    android:src="@drawable/icon_rocket" />
            </FrameLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/successFogIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="265dp"
                android:src="@drawable/rocket_fly_success_01" />
        </FrameLayout>
        <ImageView
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:layout_marginBottom="150dp"
            android:id="@+id/successColorfulIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/colorful_07" />
    </FrameLayout>


    <FrameLayout
        android:layout_marginBottom="-310dp"
        android:id="@+id/flagLayout"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:textColor="@color/white"
            android:id="@+id/flagBgIv"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rocket_flag_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="jafkfjaskdf djkfdjsakf"
            android:textColor="@color/white" />
    </FrameLayout>


    <ImageView
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:id="@+id/rocketFailedWaterIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:src="@drawable/water_01" />
</FrameLayout>
