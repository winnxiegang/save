<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/top_rel_lay"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="@color/grey_900"
            android:text="C罗会不会拿到冠军" />


        <TextView
            android:id="@+id/time_m_y_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_gray1"
            android:textSize="12sp"
            android:text="2017-10-27" />

        <TextView
            android:id="@+id/time_h_f_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray1"
            android:layout_below="@+id/time_m_y_r"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text="11:11:11 发起" />

    </RelativeLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top_rel_lay"
        android:layout_marginBottom="8dp"
        android:background="@color/colorLightGray" />

    <LinearLayout
        android:id="@+id/person_info_lay"
        android:layout_below="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray1"
            android:text="来自:" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/person_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_default_logo" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/deep_blue"
            android:text="TextView" />

    </LinearLayout>
    <TextView
        android:id="@+id/result_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/person_info_lay"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_gray1"
        android:layout_marginRight="10dp"
        android:text="成功" />

    <RelativeLayout
        android:id="@+id/pk_content"
        android:layout_below="@+id/person_info_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bao_xiang_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/action_event_middle_kick" />

        <TextView
            android:id="@+id/choose_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_gray1"
            android:text="我选择：会" />

        <TextView
            android:id="@+id/pk_value"
            android:layout_below="@+id/choose_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray1"
            android:layout_marginTop="5dp"
            android:text="PK值：25000" />

    </RelativeLayout>


</RelativeLayout>