<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/share_platform_choice_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alphBalck"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="分享直播间到"
            android:textColor="@color/colorTextG2"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/QQLayout"
                style="@style/share_layout_style"
                android:visibility="visible">

                <ImageView
                    style="@style/share_img_style"
                    android:src="@drawable/icon_qq" />

                <TextView
                    style="@style/share_text_style"
                    android:text="QQ"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/WxLayout"
                style="@style/share_layout_style"
                android:layout_toRightOf="@id/QzoneLayout">

                <ImageView
                    style="@style/share_img_style"
                    android:src="@drawable/icon_wx" />

                <TextView
                    style="@style/share_text_style"
                    android:text="微信"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/SinaLayout"
                style="@style/share_layout_style"
                android:layout_toRightOf="@id/WxCircleLayout"
                android:visibility="visible">

                <ImageView
                    style="@style/share_img_style"
                    android:src="@drawable/icon_sina" />

                <TextView
                    style="@style/share_text_style"
                    android:text="新浪微博"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/QzoneLayout"
                style="@style/share_layout_style"
                android:layout_toRightOf="@id/QQLayout"
                android:visibility="visible">

                <ImageView
                    style="@style/share_img_style"
                    android:src="@drawable/icon_qzone" />

                <TextView
                    style="@style/share_text_style"
                    android:text="QQ空间"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/WxCircleLayout"
                style="@style/share_layout_style"
                android:layout_toRightOf="@id/WxLayout">

                <ImageView
                    style="@style/share_img_style"
                    android:src="@drawable/icon_wxcircle" />

                <TextView
                    style="@style/share_text_style"
                    android:text="朋友圈"
                    android:textColor="@color/white" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/copyPasteLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    style="@style/share_img_style"
                    android:src="@drawable/icon_copy_paste" />

                <TextView
                    style="@style/share_text_style"
                    android:text="复制链接"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancel_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/share_platform_choice_ll"
        android:background="#ffffff"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="取消"
            android:textColor="@color/colorTextG2"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>