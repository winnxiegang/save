<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/content"
    android:gravity="center"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/switch_left_txt"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:background="@drawable/shape_solid_left_half_radius"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="@string/guest_of_honor" />

        <TextView
            android:id="@+id/switch_right_txt"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:background="@drawable/shape_stroke_right_half_radius"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/gold_deep"
            android:text="@string/fan_list" />
    </LinearLayout>

</LinearLayout>