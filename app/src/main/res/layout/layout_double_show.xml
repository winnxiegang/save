<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/doubleHitLayout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/bgIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_double_hit_bg" />

            <ImageView
                android:id="@+id/giftIv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_toRightOf="@+id/portraitIv"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="bibiubiu"
                    android:textColor="#705030"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/messageTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userNameTv"
                    android:layout_toRightOf="@+id/portraitIv"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="送出10个点赞"
                    android:textColor="#705030"
                    android:textSize="10sp" />
            </RelativeLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/doubleX"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="195dp"
            android:src="@mipmap/double_hit_x"
            android:visibility="visible" />

        <TextView
            android:id="@+id/doubleHitTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/doubleX"
            android:gravity="center" />
    </RelativeLayout>
</FrameLayout>