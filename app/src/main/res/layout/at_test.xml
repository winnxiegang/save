<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title"></include>

    <com.android.banana.commlib.view.VerticalScrollTextView2
        android:id="@+id/verticalTv"
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <FrameLayout
        android:id="@+id/marqueeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/marqueeIv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_shengzhi_marquee02"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/marqueeIv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_shengzhi_marquee01"
            android:visibility="gone" />
    </FrameLayout>


    <Button
        android:id="@+id/startAnimTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始" />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--  <com.android.banana.commlib.bet.anim.HeartLayout
          android:id="@+id/heartLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_alignParentBottom="true" />-->

    <Button
        android:id="@+id/btn_scroll_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開始向上滾動" />

</LinearLayout>