<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rechargeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shape_gray_solid"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pointTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="420香蕉币"
            android:textColor="@color/main_red1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/moneyTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_recharge_unchecked"
            android:gravity="center"
            android:padding="8dp"
            android:text="¥ 6"
            android:visibility="gone"></TextView>

        <RelativeLayout
            android:id="@+id/customMoneyRl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/otherMoneyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="其他金额"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/customMoneyLl"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ " />

                <EditText
                    android:id="@+id/customMoneyEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@null"
                    android:hint=""
                    android:imeOptions="actionDone"
                    android:maxLength="6"
                    android:gravity="left" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>