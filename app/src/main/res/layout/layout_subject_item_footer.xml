<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_support_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_subject_share"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:minWidth="50dp"
            android:textColor="@color/subject_footer_gray"
            android:textSize="12sp"
            tools:text="分享" />


        <TextView
            android:id="@+id/item_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_subject_comment"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:minWidth="50dp"
            android:text="回复"
            android:textColor="#bbbbbb"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/item_support_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/ic_support_gray"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:minWidth="50dp"
            android:textColor="@color/subject_footer_gray"
            android:textSize="12sp"
            tools:text="1" />

    </RelativeLayout>

    <com.android.xjq.view.ImpressionLayout
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="@color/green_50"
        android:id="@+id/impressionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.android.xjq.view.ImpressionLayout>
</LinearLayout>