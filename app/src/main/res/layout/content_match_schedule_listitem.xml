<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/colorSendName9"
        android:text="NBA" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/center_lay"
        android:orientation="vertical">

        <TextView
            android:id="@+id/left_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray4"
            android:textSize="10sp"
            android:gravity="right"
            android:text="10-29 14:00" />

        <TextView
            android:id="@+id/left_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:text="云丝卡尔斯达"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hyellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/hred"
                android:background="@drawable/huangpai_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/hred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/host"
                android:background="@drawable/hongpai_bg"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="【主】"
                android:textColor="@color/colorGray4"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/center_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <LinearLayout
            android:id="@+id/vs_linearLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vs_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/alpha_gray"
                android:textSize="10sp"
                android:visibility="gone"
                android:text="TextView" />

            <TextView
                android:id="@+id/pk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="VS"
                android:textColor="@color/alpha_gray"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/ctr_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorGray4"
            android:textSize="10sp"
            android:text="总分214" />

        <TextView
            android:id="@+id/ctr_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:text="114-100"
            android:textColor="@color/pie_green" />


        <TextView
            android:id="@+id/ctr_differ"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray4"
            android:textSize="10sp"
            android:text="分差14" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/right_lay"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/center_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/right_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一节00:23"
                android:textColor="@color/main_red"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/time_anim_img"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:visibility="gone"
                android:background="@drawable/anim_drawable" />
        </LinearLayout>

        <TextView
            android:id="@+id/right_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:maxLines="1"
            android:text="罗博士" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【客】"
                android:textColor="@color/colorGray4"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/gred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/hongpai_bg"
                android:text="1" />

            <TextView
                android:id="@+id/gyellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/huangpai_bg"
                android:text="2" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>