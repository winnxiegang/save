<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:background="@drawable/icon_pop_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingRight="6dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_gold_coin" />

            <TextView
                android:id="@+id/goldTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="金币:"
                android:textColor="#9b9b9b"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            style="@style/cutHorizontalLine"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_package_dollar" />

            <TextView
                android:id="@+id/giftGoldTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="礼金:"
                android:textColor="#9b9b9b"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            style="@style/cutHorizontalLine"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_banana_gold_coin" />

            <TextView
                android:id="@+id/pointTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="香蕉币:"
                android:textColor="#9b9b9b"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>