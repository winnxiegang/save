<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/commentContentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:text=""
        android:textColor="@color/main_black_text_color" />

    <!--<include layout="@layout/table_shaidan" />-->

    <!--<include layout="@layout/layout_match_snapshot" />-->


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/commentImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        fresco:placeholderImage="@drawable/ic_imchat_placholder"
        android:visibility="visible"
        fresco:actualImageScaleType="fitCenter"
        fresco:failureImageScaleType="fitCenter"
        fresco:placeholderImageScaleType="fitCenter" />

    <TextView
        android:id="@+id/lookMoreTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="查看更多>>"
        android:textColor="#3b73b2"
        android:textSize="13sp"
        android:visibility="gone" />

    <include layout="@layout/layout_like_reply" />
</LinearLayout>
