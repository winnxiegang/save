<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- 开始颜色="" 结束颜色="" 颜色渐变="" -->
            <gradient android:angle="0" android:endColor="@color/btnEnable2" android:startColor="#888888" />
            <!-- 渐变方向 按钮边缘="" 边缘宽="" -->
            <!--<stroke android:width="1sp" android:color="#7d5a7d" />-->
            <!-- 边缘颜色 按钮四个圆角="" -->
            <corners android:radius="30dp" />
            <!-- 半径 内边距="" 按钮文字和边缘距离="" -->
            <padding android:bottom="4dp" android:left="10dp" android:right="10dp" android:top="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="0" android:endColor="#E8BE5E" android:startColor="#ffd87f" />
           <!-- <stroke android:width="1sp" android:color="#7d5a7d" />-->
            <corners android:radius="30dp" />
            <padding android:bottom="4dp" android:left="10dp" android:right="10dp" android:top="4dp" />
        </shape>
    </item>

</selector>