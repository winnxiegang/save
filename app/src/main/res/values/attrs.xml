<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 标题模板自定义属性 -->
    <declare-styleable name="TemplateTitle">
        <!-- 标题文案 -->
        <attr name="titleText" format="string" />
        <!-- 是否有back按钮 -->
        <attr name="canBack" format="boolean" />
        <!-- back按钮文案 -->
        <attr name="backText" format="string" />
        <!-- 右侧更多功能按钮文字 -->
        <attr name="moreText" format="string" />
    </declare-styleable>

    <!-- 条形控制控件自定义属性 -->
    <declare-styleable name="LineControllerView">
        <!-- 名称 -->
        <attr name="name" format="string" />
        <!-- 内容或当前状态 -->
        <attr name="content" format="string" />
        <!-- 是否是列表中最后一个 -->
        <attr name="isBottom" format="boolean" />
        <!-- 是否可以跳转 -->
        <attr name="canNav" format="boolean" />
        <!-- 是否是开关 -->
        <attr name="isSwitch" format="boolean" />
    </declare-styleable>


    <!--自定义进度条颜色属性-->
    <declare-styleable name="CustomProgressView">
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <!--viewPager指示器的默认个数-->
    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" format="integer" />
    </declare-styleable>

    <declare-styleable name="TimeTabLayout2">
        <attr name="tb_backgroundColor" format="color" />
        <attr name="tb_textColor" format="color" />
    </declare-styleable>

    <!--自定义火箭发送按钮属性-->
    <declare-styleable name="RocketButtonClickLayout">
        <attr name="buttonBackGround" format="reference" />
        <attr name="rocketClickTextColor" format="reference|color" />
        <attr name="addFire" format="boolean" />
        <attr name="payNumAndType" format="string" />
    </declare-styleable>

    <!--抽奖机属性-->
    <declare-styleable name="WheelView">
        <attr name="unitHeight" format="dimension" />
        <attr name="itemNumber" format="integer" />

        <attr name="normalTextColor" format="color" />
        <attr name="normalTextSize" format="dimension" />
        <attr name="selectedTextColor" format="color" />
        <attr name="selectedTextSize" format="dimension" />
        <attr name="isCyclic" format="boolean" />

        <attr name="lineColor" format="color" />
        <attr name="lineHeight" format="dimension" />

        <attr name="noEmpty" format="boolean" />
        <attr name="isEnable" format="boolean" />

        <attr name="maskDarkColor" format="color" />
        <attr name="maskLightColor" format="color" />
    </declare-styleable>

    <!--流式布局的横竖距离-->
    <declare-styleable name="FlowLayout">
        <attr name="horizontalSpacing" format="dimension" />
        <attr name="verticalSpacing" format="dimension" />
    </declare-styleable>

</resources>

