<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/obtainFailedDialogLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_open_coupon_dialog_bg"
            android:paddingTop="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/portraitIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user_default_logo"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/userNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/portraitIv"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/userNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:text="福尔摩斯"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/couponTypeIv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/userNameTv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_lucky_coupon"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/couponTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="这是一个红包标题"
                android:singleLine="true"
                android:textColor="#ffd83b"
                android:maxEms="12"
                android:textSize="14sp"
                android:layout_below="@+id/userNameLayout"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/openCouponBtn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/icon_open_coupon_btn" />

        <ImageView
            android:id="@+id/dialogCloseIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/dp10"
            android:padding="8dp"
            android:src="@drawable/icon_coupon_close" />

    </FrameLayout>
</LinearLayout>