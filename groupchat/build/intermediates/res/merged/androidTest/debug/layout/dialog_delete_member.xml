<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_all_radius_white_bg"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:padding="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:gravity="left"
                android:id="@+id/messageTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="将用户移出聊天室后,如有战袍也将失效，确定移除?"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <LinearLayout
                android:visibility="gone"
                android:paddingTop="@dimen/dp10"
                android:id="@+id/selectLayout"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/selectIv"
                    android:paddingRight="@dimen/dp10"
                    android:src="@drawable/icon_contact_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@android:color/black"
                    android:text="同时加入黑名单"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>


        <View style="@style/cutLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelBtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="取消"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_text_color" />

            <TextView
                android:id="@+id/okBtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/main_red" />
        </LinearLayout>
    </LinearLayout>
