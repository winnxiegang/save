<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include layout="@layout/widget_toolbar_40dp"></include>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.android.banana.view.LabelTextView
            android:id="@+id/update_group_info"
            style="@style/group_chat_setting_label"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="left|center_vertical"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="40dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:textColor="#333"
            app:label_padding_right="31dp"
            app:label_text_color_left="#333"
            app:label_text_color_right="#666"
            app:label_text_left="修改群资料" />

        <com.android.banana.view.LabelTextView
            android:id="@+id/viewLeaderSet"
            style="@style/group_chat_setting_label"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="left|center_vertical"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="40dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:textColor="#333"
            app:label_padding_right="31dp"
            app:label_text_color_left="#333"
            app:label_text_color_right="#666"
            app:label_text_left="设置管理员" />

        <com.android.banana.view.LabelTextView
            android:id="@+id/viewSpeechSet"
            style="@style/group_chat_setting_label"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="left|center_vertical"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="40dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:textColor="#333"
            app:label_padding_right="30dp"
            app:label_text_color_left="#333"
            app:label_text_color_right="#666"
            app:label_text_left="发言设置"
            app:label_text_right="全员发言" />

        <com.android.banana.view.LabelTextView
            android:id="@+id/viewShirtLabel"
            style="@style/group_chat_setting_label"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_group_chat_shirt_small"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="right|center_vertical"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="40dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:textColor="#666"
            app:label_text_color_left="#333"
            app:label_padding_left="20dp"
            app:label_padding_right="30dp"
            app:label_text_color_right="#666"
            android:visibility="gone"
            app:label_text_left="群战袍" />

        <com.android.banana.view.LabelTextView
            android:id="@+id/viewForbid"
            style="@style/group_chat_setting_label"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="left|center_vertical"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="40dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:textColor="#333"
            app:label_text_color_left="#333"
            app:label_padding_right="31dp"
            app:label_text_color_right="#666"
            app:label_text_left="禁言管理" />

        <LinearLayout
            android:id="@+id/layoutTheme"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAllowTheme"
                style="@style/group_chat_setting_label"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center_vertical"
                android:text="允许管理员修改主题"
                android:textColor="#333" />

            <ImageView
                android:id="@+id/checkBoxTheme"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:button="@null"
                android:src="@drawable/selector_main_check_box" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>