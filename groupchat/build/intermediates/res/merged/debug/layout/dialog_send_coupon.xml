<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.android.banana.commlib.view.CommonStatusLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_live_coupon_main_bg"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.android.banana.commlib.view.MyTabLayout
                android:id="@+id/tabLayout"
                style="@style/MyCustomTabLayout"
                android:layout_marginTop="10dp"
                app:tabIndicatorColor="@color/white"
                app:tabSelectedTextColor="@color/white" />

            <FrameLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
            <!-- <include layout="@layout/layout_send_coupon_view"></include>

             <include layout="@layout/layout_group_coupon_view"></include>-->
        </LinearLayout>

        <ImageView
            android:id="@+id/closeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/icon_coupon_close"
            android:visibility="gone" />
    </com.android.banana.commlib.view.CommonStatusLayout>

</LinearLayout>