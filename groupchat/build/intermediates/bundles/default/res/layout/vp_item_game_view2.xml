<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:background="@drawable/vp_game_item_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content_lay"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:background="@drawable/vp_game_item_alpha_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_lay"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/chnangci_rangfei_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="【上半场】让球-1.5分"
                android:textColor="@color/ColorGray"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/match_type_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/match_time_txt"
                android:text="欧冠"
                android:textColor="@color/ColorGray"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/match_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="12-12 10:30"
                android:textColor="@color/ColorGray"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/guest_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/vs_txt"
                android:text="切尔西"
                android:textColor="@color/ColorGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vs_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="VS"
                android:textColor="@color/ColorGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/host_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/vs_txt"
                android:text="曼联"
                android:textColor="@color/ColorGray"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/folder_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/arrow_down" />

        </RelativeLayout>

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_below="@+id/top_lay"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:background="@color/ColorGray" />

        <RelativeLayout
            android:id="@+id/cheer_lay"
            android:layout_below="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/host_zhuwei"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/selector_host_bg"
                    android:gravity="center"
                    android:text="助威"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/host_coin_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/icon_gold_coin"
                    android:drawablePadding="3dp"
                    android:text="500"
                    android:textColor="@color/gold_deep"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctr_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/changci_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="【上半场】比分"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/support_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="曼联-1.5球， 你支持哪支球队？"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/guest_zhuwei"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@drawable/selector_guest_bg"
                    android:gravity="center"
                    android:text="助威"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/guest_coin_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/icon_gold_coin"
                    android:drawablePadding="3dp"
                    android:text="300"
                    android:textColor="@color/gold_deep"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>

        </RelativeLayout>

        <com.android.banana.commlib.view.PercentProgressView
            android:layout_below="@+id/cheer_lay"
            android:id="@+id/percent_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:guestProgressColor="@color/lignt_blue3"
            app:hostProgressColor="@color/lignt_red3" />

    </RelativeLayout>

</LinearLayout>