<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp10"
    android:paddingTop="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/portraitIv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/user_default_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textColor="#747c9e"
                android:textSize="12sp"
                tools:text="userName" />

            <ImageView
                android:id="@+id/medal_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:src="@drawable/icon_group_owner"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/medal_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/transform_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_chat_transform_left"
            android:clickable="true"
            android:paddingTop="@dimen/dp10">

            <TextView
                android:id="@+id/trans_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/sp15"
                android:visibility="visible"
                tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题" />


            <ImageView
                android:id="@+id/trans_logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/trans_title"
                android:layout_marginLeft="10dp"
                android:src="@drawable/user_default_logo" />


            <TextView
                android:id="@+id/trans_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trans_title"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/trans_logo"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:maxLines="2"
                android:paddingRight="10dp"
                android:textColor="@color/light_text_color"
                android:textSize="13sp"
                tools:text="12343113" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/trans_logo"
                android:layout_marginTop="8dp"
                android:background="#80e8e8e8"></View>

            <TextView
                android:id="@+id/trans_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/light_text_color"
                android:textSize="@dimen/sp12"
                tools:text="by_小编" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

