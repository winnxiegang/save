<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/portraitIv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/user_default_logo" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="皂皂"
                android:textColor="#747c9e"
                android:textSize="@dimen/sp12" />

            <ImageView
                android:id="@+id/medal_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:src="@drawable/icon_group_admin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/medal_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/coupon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/chat_left_coupon"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <Space
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/coupon_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/white"
                tools:text="大家大家大家大家大家大家大家大家大家大家大家" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="55dp"
                android:text="领取红包"
                android:textColor="@color/sample_background_color_write"
                android:textSize="@dimen/sp12" />

            <Space
                android:layout_width="1px"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/coupon_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp1"
                android:layout_marginLeft="11dp"
                android:text="@string/xjq_coupon"
                android:textColor="@color/light_text_color"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>