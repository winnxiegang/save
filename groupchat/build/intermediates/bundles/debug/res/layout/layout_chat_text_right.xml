<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leftRecordLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingRight="@dimen/dp10"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right">


            <ImageView
                android:id="@+id/medal_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:id="@+id/medal_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_group_owner"
                android:visibility="gone" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="3dp"
                android:textColor="#747c9e"
                android:textSize="12sp"
                tools:text="userName" />

        </LinearLayout>

        <com.android.banana.commlib.view.HtmlEmojiTextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginTop="5dp"
            android:autoLink="web|email|phone"
            android:background="@drawable/bg_chat_text_right"
            android:clickable="true"
            android:gravity="center|left"
            android:linksClickable="true"
            android:maxWidth="250dp"
            android:minHeight="33dp"
            android:minWidth="50dp"
            android:textColor="#333333"
            android:textIsSelectable="true"
            android:textSize="14sp"
            tools:text="文本消息" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/portraitIv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/user_default_logo" />
</LinearLayout>

